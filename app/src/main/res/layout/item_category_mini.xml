<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#B440A8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        android:dividerHeight="19.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="1dp"
        android:elevation="1dp"
        android:divider="@android:color/transparent"
        app:cardPreventCornerOverlap="false"
        android:id="@+id/card_view">
        <RelativeLayout
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RelativeLayout
                android:gravity="center"
                android:elevation="1dp"
                android:layout_width="80dp"
                android:layout_height="80dp">
                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_egg"
                    android:layout_width="60dp"
                    android:layout_height="55dp"/>
                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_egg"
                    android:layout_width="75dp"
                    android:layout_height="60dp"/>
                <RelativeLayout
                    android:rotation="45"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_egg"
                    android:layout_width="75dp"
                    android:layout_height="70dp"/>
                <RelativeLayout
                    android:rotation="125"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_egg"
                    android:layout_width="75dp"
                    android:layout_height="60dp"/>
                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_egg"
                    android:layout_width="75dp"
                    android:layout_height="60dp"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/image_view_item_category"
                android:elevation="2dp"
                android:padding="15dp"
                android:src="@drawable/category_item"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="90dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_view_item_category"
                    android:layout_marginRight="10dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="SUPER HERO "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/text_view_item_category_counter"
                    android:layout_marginRight="10dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="more then 100 pack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>