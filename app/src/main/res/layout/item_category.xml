<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/colorAccent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <TextView
                    android:id="@+id/text_view_item_category"
                    android:textSize="22sp"
                    android:paddingLeft="120dp"
                    android:textColor="@color/white"
                    android:gravity="left|center"
                    android:text="CROOMING"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:textAlignment="center"
                    android:id="@+id/text_view_item_category_shadow"
                    android:layout_marginLeft="100dp"
                    android:textColor="#1affffff"
                    android:textSize="100sp"
                    android:gravity="left|center"
                    android:text="CROOMING"
                    android:layout_width="1000dp"
                    android:layout_height="match_parent" />
                <RelativeLayout
                    android:gravity="center"
                    android:elevation="1dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp">
                    <RelativeLayout
                        android:rotation="145"
                        android:visibility="visible"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_egg"
                        android:layout_width="90dp"
                        android:layout_height="75dp"/>
                    <RelativeLayout
                        android:rotation="45"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_egg"
                        android:layout_width="95dp"
                        android:layout_height="70dp"/>
                    <RelativeLayout
                        android:visibility="visible"
                        android:rotation="15"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_egg"
                        android:layout_width="75dp"
                        android:layout_height="90dp"/>
                    <RelativeLayout
                        android:visibility="visible"
                        android:rotation="125"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_egg"
                        android:layout_width="75dp"
                        android:layout_height="90dp"/>
                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_egg"
                        android:layout_width="95dp"
                        android:layout_height="70dp"/>
                </RelativeLayout>
                <ImageView
                    android:elevation="5dp"
                    android:padding="15dp"
                    android:id="@+id/image_view_item_category"
                    app:srcCompat="@drawable/category_item"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_alignParentLeft="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>